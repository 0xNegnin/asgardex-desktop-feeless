{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "noFallthroughCasesInSwitch": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.Intl"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "types": ["vite-plugin-svgr/client", "jest", "@testing-library/jest-dom", "src/types/test-env"]
  },
  "include": ["src/types/**/*", "src/test/**/*", "src/renderer/**/*", "src/shared/**/*"],
  "exclude": ["./node_modules"]
}
