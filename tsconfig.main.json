{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "Node",
    "outDir": "./build/",
    "pretty": true
  },
  "include": ["./src/main", "./src/shared"],
  "exclude": ["src/renderer/"]
}
